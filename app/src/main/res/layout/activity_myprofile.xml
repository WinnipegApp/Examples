<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#193360"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.winnipegapp.examples.MyProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="#d1d1d1">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:id="@+id/textView2"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Christian Isip"
                        android:id="@+id/textName"
                        android:layout_below="@+id/textView2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="321 McDermot Avenue"
                        android:id="@+id/textAddress"
                        android:layout_below="@+id/textName"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="204-1111-111"
                        android:id="@+id/textNumber"
                        android:layout_below="@+id/textAddress"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="winnipegapp@hotmail.com"
                        android:id="@+id/textEmail"
                        android:layout_below="@+id/textNumber"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R3A 010"
                        android:id="@+id/textPostal"
                        android:layout_alignBottom="@+id/textAddress"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="16dp"
                        android:textColor="#000000" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:background="#e4e4e4"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:id="@+id/editProfile"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="#f0931a"
                            android:layout_marginRight="8dp"
                            android:textSize="16dp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snow Zone"
                        android:id="@+id/textView14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="#6d6d6d"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/selector"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:textColor="@android:color/white"
                        android:text="D"
                        android:layout_below="@+id/textView14"
                        android:layout_alignLeft="@+id/textView14"
                        android:layout_alignStart="@+id/textView14"
                        android:id="@+id/textSnowZone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Garbage Pickup Day"
                        android:id="@+id/textView15"
                        android:layout_alignTop="@+id/textView14"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="#6d6d6d"
                        android:layout_marginRight="32dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06/12/2016"
                        android:id="@+id/textView16"
                        android:textColor="#000000"
                        android:layout_marginRight="37dp"
                        android:layout_marginEnd="36dp"
                        android:layout_below="@+id/textView14"
                        android:layout_alignRight="@+id/textView15"
                        android:layout_alignEnd="@+id/textView15"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:id="@+id/textView17"
                        android:layout_below="@+id/textView16"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="#000000"
                        android:layout_marginRight="80dp" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="fill_parent"
                    android:layout_height="146dp"
                    android:background="#FAFAFA"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Inquiries (5 out of 10)"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:textColor="#000000" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="8dp"
                                android:id="@+id/cardviewInquiries8"
                                android:backgroundTint="#FAFAFA">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Graffiti Removal"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inquiry Status"
                                    android:textColor="#0dff00"
                                    android:layout_marginTop="32dp"
                                    android:layout_marginLeft="8dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inquiries"
                                    android:textColor="#000000"
                                    android:layout_marginTop="54dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginBottom="8dp"/>


                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="8dp"
                                android:id="@+id/cardviewInquiries9"
                                android:backgroundTint="#FAFAFA"
                                android:layout_marginRight="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Graffiti Removal"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inquiry Status"
                                    android:textColor="#0dff00"
                                    android:layout_marginTop="32dp"
                                    android:layout_marginLeft="8dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="06/06/2016"
                                    android:textColor="#000000"
                                    android:layout_marginTop="54dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginBottom="8dp"/>


                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VIEW ALL"
                                android:id="@+id/textView25"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:textColor="#f0931a" />


                        </LinearLayout>
                    </RelativeLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView2"
                    android:layout_width="fill_parent"
                    android:layout_height="146dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Inquiries (5 out of 10)"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:textColor="#000000" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">


                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="8dp"
                                android:id="@+id/cardviewInquiries2"
                                android:backgroundTint="#FAFAFA">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Graffiti Removal"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inquiry Status"
                                    android:textColor="#0dff00"
                                    android:layout_marginTop="32dp"
                                    android:layout_marginLeft="8dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inquiries"
                                    android:textColor="#000000"
                                    android:layout_marginTop="54dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginBottom="8dp"/>


                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="8dp"
                                android:id="@+id/cardviewInquiries"
                                android:backgroundTint="#FAFAFA"
                                android:layout_marginRight="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Graffiti Removal"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inquiry Status"
                                    android:textColor="#0dff00"
                                    android:layout_marginTop="32dp"
                                    android:layout_marginLeft="8dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inquiries"
                                    android:textColor="#000000"
                                    android:layout_marginTop="54dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginBottom="8dp"/>


                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VIEW ALL"
                                android:id="@+id/textView21"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:textColor="#f0931a" />


                        </LinearLayout>

                    </RelativeLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
